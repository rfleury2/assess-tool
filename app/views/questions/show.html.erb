<div class='question-header'>
  <h2 class='question-prompt'><%= @question.prompt %></h2>
  <span class='pull-right'>
    <%= link_to question_path(@question), method: :delete do %>
      <span class='fa fa-remove fa-2x nomark'></span>
    <% end %>
  </span>
</div>

<ul id="questions-list" class="list-group">
  <%= render @question.answers %>
</ul>

<div id="questions-error"></div>

<div class='new-answer'><%= render partial: 'answers/new', locals: { question: @question } %></div>

<!-- TODO: Enable and disable this button based on submission status -->
<%= button_to "Finalize question", question_finish_path(@question), class: 'btn btn-success' %>